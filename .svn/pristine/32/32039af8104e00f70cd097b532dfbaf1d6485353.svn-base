    .study-modal-close {
        font-size: 50px;
        color: red;
        margin: 0 6px 0 0;
    }

    .study-modal-div {
        background: rgba(105, 114, 121, 1);
        padding: 38px 30px;
        color: rgba(12, 39, 60, 1);

        .study-modal-title-div {
            text-align: center;

            .study-modal-img {
                margin: -14px 6px 0 0;
                height: 32px;
            }

            .study-modal-title {
                display: inline-block;
