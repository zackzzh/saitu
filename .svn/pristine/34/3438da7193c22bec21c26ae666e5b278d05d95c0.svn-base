#common-modal {
  display: none;
}
.page-course {
  padding-bottom: 120px;
  background-image: url('../img/bg.png');
  background-size: 100%, 100%;
  background-repeat: no-repeat;
}
.page-course .banner {
  width: 100%;
  position: relative;
  z-index: 1;
}
.page-course .banner img {
  width: 100%;
  position: relative;
  z-index: 2;
}
.page-course .banner .add-us {
  cursor: pointer;
  position: absolute;
  width: 214px;
  height: 68px;
  line-height: 68px;
  background: transparent;
  border: 1px solid #fff;
  font-size: 32px;
  color: #fff;
  top: 60%;
  left: 50%;
  text-align: center;
  transform: translateX(-50%);
  z-index: 3;
}
.page-course .index-t {
  color: #0C273C;
  width: 100%;
  padding-top: 40px;
  margin-bottom: 36px;
  text-align: center;
}
.page-course .index-t div:nth-child(1) {
  font-size: 32px;
}
.page-course .index-t div:nth-child(2) {
  font-size: 26px;
  position: relative;
  display: inline-block;
  margin-top: 10px;
}
.page-course .table-line {
  width: 100%;
  height: 1.25rem;
}
.page-course .course-thead {
  height: 3.75rem;
  line-height: 3.75rem;
  color: #FF5B5B;
  font-size: 1.125rem;
  background: #042239;
  margin-bottom: 1.25rem;
  width: 100%;
  display: flex;
  align-items: center;
}
.page-course .course-thead .line {
  position: relative;
}
.page-course .course-thead .line::before {
  position: absolute;
  top: 0;
  left: 0;
  content: '';
  height: 100%;
  width: 0;
  border: 6px solid #FF5B5B;
}
.page-course .course-thead .thead-one {
  width: 15%;
  text-align: center;
}
.page-course .course-thead .thead-two {
  width: 20%;
  text-align: center;
}
.page-course .course-thead .thead-three {
  width: 10%;
  text-align: center;
}
.page-course .table {
  background: rgba(4, 34, 57, 0.12);
}
.page-course .table .course-body {
  color: #333333;
  font-size: 16px;
}
.page-course .table .course-body .course-body-item {
  display: flex;
  align-items: center;
  text-align: center;
  border-bottom: 1px solid #fff;
  height: 120px;
}
.page-course .table .course-body .thead-one {
  width: 15%;
}
.page-course .table .course-body .thead-one img {
  width: 100%;
  height: 120px;
}
.page-course .table .course-body .thead-three {
  width: 10%;
}
.page-course .table .course-body .thead-two {
  width: 20%;
}
.page-course .table .course-body span {
  display: inline-block;
  color: #333333;
  cursor: pointer;
}
.page-course .table .course-body .td {
  height: 120px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1px solid #fff;
}
.page-course .table .course-body .none {
  border: none;
}
@media screen and (min-width: 320px) and (max-width: 768px) {
  .add-us {
    width: 80px !important;
    height: 30px !important;
    line-height: 30px !important;
    font-size: 16px !important;
  }
  .course-body,
  .course-thead {
    font-size: 12px !important;
  }
  .thead-one {
    width: 28% !important;
  }
}
@media screen and (min-width: 769px) and (max-width: 992px) {
  .course-body,
  .course-thead {
    font-size: 12px !important;
  }
}
