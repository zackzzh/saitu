.page-course {
  background: #f5f5f4;
  padding-bottom: 120px;
}
.page-course .banner {
  width: 100%;
  position: relative;
  z-index: 10;
}
.page-course .banner img {
  width: 100%;
  position: relative;
  z-index: 10;
}
.page-course .banner .add-us {
  cursor: pointer;
  position: absolute;
  width: 214px;
  height: 68px;
  line-height: 68px;
  background: transparent;
  border: 1px solid #fff;
  font-size: 32px;
  color: #fff;
  top: 60%;
  left: 50%;
  text-align: center;
  transform: translateX(-50%);
  z-index: 100;
}
.page-course .index-t {
  color: #0C273C;
  width: 308px;
  padding-top: 40px;
  margin-bottom: 36px;
}
.page-course .index-t div:nth-child(1) {
  font-size: 32px;
}
.page-course .index-t div:nth-child(2) {
  font-size: 26px;
  position: relative;
  display: inline-block;
  margin-top: 10px;
}
.page-course .index-t div:nth-child(2)::after {
  position: absolute;
  top: -5px;
  right: 0;
  content: "";
  width: 100%;
  height: 0;
  border: 2px solid #0C273C;
}
.page-course .course-content {
  padding: 4.125rem 0px;
}
.page-course .course-content .course-title {
  font-size: 1.875rem;
  color: #0C273C;
  margin-bottom: 1.25rem;
  font-weight: bold;
}
.page-course .course-content .course-subtitle {
  font-size: 1.25rem;
  color: #0C273C;
  margin-bottom: 1.25rem;
}
.page-course .course-content p {
  font-size: 1rem;
  color: #0C273C;
  margin: 1.875rem 0;
}
@media screen and (min-width: 320px) and (max-width: 768px) {
  .add-us {
    width: 80px !important;
    height: 30px !important;
    line-height: 30px !important;
    font-size: 16px !important;
  }
}
