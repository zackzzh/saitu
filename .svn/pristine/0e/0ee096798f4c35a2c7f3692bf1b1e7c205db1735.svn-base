#common-modal {
    display: none;
}

.page-course {
    padding-bottom  : 120px;
    background-image: url('../img/bg.png');

    .banner {
        width   : 100%;
        position: relative;
        z-index : 1;

        img {
            width   : 100%;
            position: relative;
            z-index : 2;
        }

        .add-us {
            cursor     : pointer;
            position   : absolute;
            width      : 214px;
            height     : 68px;
            line-height: 68px;
            background : transparent;
            border     : 1px solid #fff;
            font-size  : 32px;
            color      : #fff;
            top        : 60%;
            left       : 50%;
            text-align : center;
            transform  : translateX(-50%);
            z-index    : 3;
        }
    }

    // 公共title
    .index-t {
        color        : #0C273C;
        width        : 100%;
        padding-top  : 40px;
        margin-bottom: 36px;
        text-align   : center;

        div:nth-child(1) {
            font-size: 32px;
        }

        div:nth-child(2) {
            font-size : 26px;
            position  : relative;
            display   : inline-block;
            margin-top: 10px;
        }
    }

    .table-line {
        width : 100%;
        height: 1.25rem;
    }

    ::-webkit-scrollbar-track-piece {
        //滚动条凹槽的颜色，还可以设置边框属性
        background-color: #f8f8f8;
    }

    ::-webkit-scrollbar {
        //滚动条的宽度
        width : 5px;
        height: 0px;
    }

    ::-webkit-scrollbar-thumb {
        //滚动条的设置
        background-color: #dddddd;
        background-clip : padding-box;
        min-height      : 28px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background-color: #bbb;
    }

    .course-table {
        overflow-x: auto;

        .course-thead {
            width        : 1108px;
            height       : 3.75rem;
            line-height  : 3.75rem;
            color        : #FF5B5B;
            font-size    : 1.125rem;
            background   : #042239;
            margin-bottom: 1.25rem;
            display      : flex;
            align-items  : center;

            .line {
                position: relative;

                &::before {
                    position: absolute;
                    top     : 0;
                    left    : 0;
                    content : '';
                    height  : 100%;
                    width   : 0;
                    border  : 6px solid #FF5B5B;
                }
            }

            .thead-one {
                width     : 15%;
                text-align: center;
            }

            .thead-two {
                width     : 20%;
                text-align: center;

            }

            .thead-three {
                width     : 10%;
                text-align: center;

            }
        }

        .table {
            background: rgba(4, 34, 57, 0.12);
            width     : 1108px;

            .course-body {
                color    : #333333;
                font-size: 16px;

                .course-body-item {
                    display      : flex;
                    align-items  : center;
                    text-align   : center;
                    border-bottom: 1px solid #fff;
                    height       : 120px;
                }

                .thead-one {
                    width: 15%;

                    img {
                        width : 100%;
                        height: 120px;
                    }
                }

                .thead-three {
                    width: 10%;
                }

                .thead-two {
                    width: 20%;
                }

                span {
                    display: inline-block;
                    color  : #333333;
                    cursor : pointer;
                }

                .td {
                    height         : 120px;
                    display        : flex;
                    flex-direction : column;
                    align-items    : center;
                    justify-content: center;
                    border-right   : 1px solid #fff;
                }

                .none {
                    border: none;
                }
            }
        }
    }
}

@media screen and (min-width: 993px) and (max-width: 1200px) {
    .course-table {
        overflow-x: inherit !important;
    }

    .course-thead {
        width: 950px !important;

    }

    .td {
        font-size: 14px !important;
    }

    .table {
        width: 950px !important;
    }
}

@media screen and (min-width: 320px) and (max-width: 768px) {
    .add-us {
        width      : 80px !important;
        height     : 30px !important;
        line-height: 30px !important;
        font-size  : 16px !important;
    }

    .course-table {
        overflow-x: scroll !important;
    }
}

@media screen and (min-width: 769px) and (max-width: 992px) {
    .course-table {
        overflow-x: scroll !important;
    }
}