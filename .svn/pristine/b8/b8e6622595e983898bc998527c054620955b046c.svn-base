body {
  width: 100%;
  background: linear-gradient(-4deg, #939595, #e9ebeb, #ffffff);
}
body .study-abroad-main-div {
  width: 1000px;
  margin: auto;
}
body .study-abroad-main-div .study-abroad-card-div {
  width: 1000px;
  margin: 90px 0;
  background: #0C273C;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-img-div {
  display: inline-block;
  width: 54%;
  position: relative;
  text-align: center;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-img-div .study-abroad-img-type {
  width: 100%;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-img-div .study-abroad-img-title {
  color: white;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 20%;
  margin: auto;
  font-size: 54px;
  font-weight: bold;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-card-div-text {
  float: right;
  width: 46%;
  margin: 40px 40px 0 -40px;
  padding: 0 0 0 50px;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-card-div-text .study-abroad-card-title {
  color: #EB6D6E;
  font-size: 44px;
  font-weight: bold;
  margin-bottom: 10px;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-card-div-text .study-abroad-card-content {
  color: #EB6D6E;
  font-size: 28px;
  word-break: break-all;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-card-div-text img {
  clear: both;
  float: right;
  height: 102px;
  margin: 0 0 0 40px;
}
