.page-course {
    background    : #f5f5f4;
    padding-bottom: 120px;

    .banner {
        width   : 100%;
        position: relative;
        z-index : 10;

        img {
            width   : 100%;
            position: relative;
            z-index : 10;
        }

        .add-us {
            cursor     : pointer;
            position   : absolute;
            width      : 214px;
            height     : 68px;
            line-height: 68px;
            background : transparent;
            border     : 1px solid #fff;
            font-size  : 32px;
            color      : #fff;
            top        : 60%;
            left       : 50%;
            text-align : center;
            transform  : translateX(-50%);
            z-index    : 100;
        }
    }

    // 公共title
    .index-t {
        color        : #0C273C;
        width        : 308px;
        padding-top  : 40px;
        margin-bottom: 36px;

        div:nth-child(1) {
            font-size: 32px;
        }

        div:nth-child(2) {
            font-size : 26px;
            position  : relative;
            display   : inline-block;
            margin-top: 10px;

            &::after {
                position: absolute;
                top     : -5px;
                right   : 0;
                content : "";
                width   : 100%;
                height  : 0;
                border  : 2px solid #0C273C;
            }
        }
    }

    .course-thead {
        height       : 60px;
        line-height  : 60px;
        color        : #FF5B5B;
        font-size    : 16px;
        background   : #042239;
        margin-bottom: 16px;
        width        : 100%;

        .thead-one {
            width     : 15%;
            text-align: center;

        }

        .thead-two {
            width     : 25%;
            text-align: center;

        }

        .thead-three {
            width     : 12%;
            text-align: center;

        }
    }

    .course-body {
        background: #042239;
        color     : #FF5B5B;
        font-size : 16px;

        .thead-one {
            width: 15%;

            img {
                width: 100%;
            }
        }

        .thead-three {
            width: 12%;
        }

        .thead-two {
            width: 25%;
        }

        span {
            display: inline-block;
            color  : #FF5B5B;
            cursor : pointer;
        }

        tr {
            border-bottom: 1px solid #FF5B5B;
        }

        td {
            padding     : 48px 10px !important;
            border-right: 1px solid #FF5B5B;
            text-align  : center;

        }

        td:nth-last-child(1) {
            border-right: none;
        }

        tr:nth-last-child(1) {
            border-bottom: none;
        }
    }

    .table th,
    .table td {
        padding       : 0;
        vertical-align: middle;
    }
}

@media screen and (min-width: 320px) and (max-width: 768px) {
    .add-us {
        width      : 80px !important;
        height     : 30px !important;
        line-height: 30px !important;
        font-size  : 16px !important;
    }

    .course-body,
    .course-thead {
        font-size: 12px !important;
    }

    .thead-one {
        width: 28% !important;
    }
}

@media screen and (min-width: 769px) and (max-width: 992px) {

    .course-body,
    .course-thead {
        font-size: 12px !important;
    }
}