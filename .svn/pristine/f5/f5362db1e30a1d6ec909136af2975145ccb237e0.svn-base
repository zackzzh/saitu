body {
    background-image: url("../../img/ranking/bg.png");
    background-size: 100% 100%;
    background-repeat: no-repeat;
    display: flex;
    justify-content: center;

    .ranking-main-div {
        text-align: center;
        width: 100%;

        .ranking-head-div {
            width: 100%;
            position: relative;

            img {
                width: 100%;
            }

            .ranking-head-text {
                position: absolute;
                top: 0;
                text-align: center; //使得文本水平居中
                top: 50%;
                left: 50%; //水平居中
                width: 100%; //水平居中
                height: 100%;
                // margin: -50% 0 0 -25%; //水平居中
                margin: -4% 0 0 -50%;

                .ranking-head-title {
                    margin-bottom: 24px;
                    color: #FFFFFF;
                    font-size: 38px;
                    font-weight: bold;
                }

                .ranking-head-subtitle {
                    margin-bottom: 10px;
                    color: rgba(255, 255, 255, 0.8);
                    font-size: 16px;
                    letter-spacing: 2px;
                }
            }
        }

        .ranking-content-main-div {
            text-align: center;

            .ranking-content-title {
                margin: 58px 0 36px 0;
                font-size: 28px;
                font-weight: bold;
            }

            .ranking-content-content {
                text-align: left;
                color: rgba(12, 39, 60, 0.75);
                font-size: 14px;
                letter-spacing: 2xp;
                line-height: 30px;
            }

            .ranking-content-content-link {
                cursor: pointer;
                margin: 10px 0 36px 0;
                text-align: right;
                color: #FF5B5B;
                font-size: 12px;
                letter-spacing: 2xp;
                line-height: 30px;
            }

            .ranking-content-top20 {
                .ranking-content-top20-title {
                    margin: 70px 0 20px 0;
                    color: rgba(12, 39, 60, 1);
                    font-size: 28px;
                    font-weight: bold;
                }

                .ranking-content-top20-country {
                    width: 100%;
                    padding: 12px 24px;
                    font-size: 14px;
                    color: #FFFFFF;
                    background: rgba(12, 39, 60, 0.7);
                    display: flex;
                    justify-content: space-between;

                    .ranking-content-top20-country-title {
                        margin-left: 6px;

                        img {
                            width: 22px;
                            height: 22px;
                            margin-right: 10px;
                        }
                    }

                    .ranking-content-top20-countrys {
                        // width: 90%;
                        // display: flex;
                        // justify-content: space-around;

                        div {
                            margin: 4px 0;
                            cursor: pointer;
                        }
                    }
                }

                .ranking-content-top20-ranking {
                    .ranking-content-top20-ranking-item {
                        display: flex;
                        justify-content: space-between;

                        .ranking-content-top20-ranking-title {
                            margin: 40px 0 18px 0;
                            color: rgba(12, 39, 60, 0.8);
                            font-size: 16px;
                            font-weight: bold;
                        }

                        .ranking-content-top20-ranking-content {
                            margin: 6px 0;
                            color: rgba(12, 39, 60, 0.75);
                            font-size: 14px;
                            letter-spacing: 2px;
                        }
                    }
                }
            }

            .ranking-content-specialist {
                .ranking-content-specialist-title {
                    margin: 70px 0 36px 0;
                    color: rgba(12, 39, 60, 1);
                    font-size: 28px;
                    font-weight: bold;
                }

                img {
                    width: 100%;
                }

                .ranking-content-specialist-item {
                    // display: inline-block;
                    padding: 0 100px;
                    width: 100%;
                    text-align: left;

                    .ranking-content-specialist-item-title {
                        margin: 36px 0 18px 0;
                        font-size: 16px;
                        font-weight: bold;
                    }

                    .ranking-content-specialist-item-content {
                        margin: 4px 0;
                        font-size: 14px;
                        font-weight: 550;
                        letter-spacing: 1px;
                    }
                }

                .ranking-content-specialist-btn {
                    margin: 30px 0 60px 0;
                    border-radius: 20px;
                    padding: 12px 14px;
                    font-size: 14px;
                    color: rgba(255, 91, 91, 1);
                }
            }
        }

        .ranking-advisory-div {
            width: 100%;
            background: linear-gradient(to right, rgba(58, 109, 215, 1) 0%, rgba(156, 121, 235, 1) 10%, rgba(40, 86, 182, 1) 100%);
            background-repeat: no-repeat;
            color: #FFFFFF;
            letter-spacing: 1px;

            .ranking-advisory-title {
                padding: 30px 0 6px 0;
                font-size: 22px;
                font-weight: bold;
            }

            .ranking-advisory-subtitle {
                padding-bottom: 10px;
                font-size: 14px;
                color: rgba(255, 255, 255, 0.8);
            }

            .ranking-advisory-linediv {
                // padding-bottom: 24px;
                margin: auto;
                width: 50px;
                height: 2px;
                background: #FFFFFF;
                // border-top: 2px solid #FFFFFF;
            }

            .ranking-advisory-form-div {
                // width: 1200px;
                margin: auto;
                padding: 24px 0 40px 0;
                display: flex;
                align-items: center;

                .ranking-advisory-input-group {
                    padding: 4px 6px;
                    border: 1px solid #ffffff;
                    border-radius: 8px;

                    .ranking-advisory-icon {
                        display: flex;
                        align-items: center;

                        img {
                            width: 22px;
                            height: 22px;
                            padding: 2px 4px 2px 0;
                        }
                    }

                    .ranking-advisory-input {
                        background: transparent;
                        border: 0;
                    }
                }

                .ranking-advisory-btn {
                    border-radius: 8px;
                    background: #FFFFFF;
                    color: #5567D0
                }

                .ranking-advisory-hotine {
                    text-align: left;

                    .ranking-advisory-hotine-title {
                        font-size: 14px;
                        font-weight: bold;
                    }

                    .ranking-advisory-hotine-number {
                        font-size: 22px;
                    }
                }

                .ranking-advisory-col {
                    margin: 10px 0;
                }
            }
        }
    }
}

@media screen and (min-width: 620px) and (max-width: 730px) {
    body {
        .ranking-main-div {
            .ranking-head-div {
                .ranking-head-text {

                    .ranking-head-title {
                        margin-bottom: 14px;
                        font-size: 32px;
                    }

                    .ranking-head-subtitle {
                        margin-bottom: 6px;
                        font-size: 14px;
                    }
                }
            }
        }
    }
}

@media screen and (min-width: 470px) and (max-width: 620px) {
    body {
        .ranking-main-div {
            .ranking-head-div {
                .ranking-head-text {
                    margin: -10% 0 0 -50%;

                    .ranking-head-title {
                        margin-bottom: 8px;
                        font-size: 26px;
                    }

                    .ranking-head-subtitle {
                        margin-bottom: 4px;
                        font-size: 12px;
                    }
                }
            }
        }
    }
}

@media screen and (max-width: 400px) and (max-width: 470px) {
    body {
        .ranking-main-div {
            .ranking-head-div {
                .ranking-head-text {
                    margin: -12% 0 0 -50%;

                    .ranking-head-title {
                        margin-bottom: 6px;
                        font-size: 20px;
                    }

                    .ranking-head-subtitle {
                        margin-bottom: 2px;
                        font-size: 10px;
                    }
                }
            }
        }
    }
}
@media screen and (max-width: 400px) {
    body {
        .ranking-main-div {
            .ranking-head-div {
                .ranking-head-text {
                    margin: -14% 0 0 -50%;

                    .ranking-head-title {
                        margin-bottom: 4px;
                        font-size: 16px;
                    }

                    .ranking-head-subtitle {
                        margin-bottom: 4px;
                        font-size: 8px;
                    }
                }
            }
        }
    }
}