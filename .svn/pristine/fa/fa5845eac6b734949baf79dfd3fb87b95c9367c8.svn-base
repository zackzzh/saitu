body {
    width: 100%;
    background: linear-gradient(-4deg, rgba(147, 149, 149, 1), rgba(233, 235, 235, 1), rgba(255, 255, 255, 1));

    .study-abroad-main-div {
        width: 1000px;
        margin: auto;

        .study-abroad-card-div {
            width: 1000px;
            margin: 90px 0;
            background: #0C273C;

            .study-abroad-img-div {
                display: inline-block;
                width: 54%;
                position: relative;
                text-align: center;

                .study-abroad-img-type {
                    width: 100%;
                }

                .study-abroad-img-title {
                    // background-color: red;
                    color: white;
                    position: absolute;
                    top: 0;
                    bottom: 0;
                    left: 0; //水平居中
                    right: 0; //水平居中
                    width: 100%; //水平居中
                    height: 20%;
                    margin: auto;
                    font-size: 54px;
                    font-weight: bold;
                }
            }

            .study-abroad-card-div-text {
                float: right;
                width: 46%;
                // display: inline-block;
                margin: 40px 40px 0 -40px;
                padding: 0 0 0 50px;

                .study-abroad-card-title {
                    color: #EB6D6E;
                    font-size: 44px;
                    font-weight: bold;
                    margin-bottom: 10px;
                }

                .study-abroad-card-content {
                    color: #EB6D6E;
                    font-size: 28px;
                    word-break: break-all;
                }

                img {
                    clear: both;
                    float: right;
                    height: 102px;
                    margin: 0 0 0 40px;
                }
            }
        }
    }
}