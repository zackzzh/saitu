#common-modal {
    display: none;
}

.page-course {
    background    : #f5f5f4;
    padding-bottom: 120px;

    .banner {
        width   : 100%;
        position: relative;
        z-index : 1;

        img {
            width   : 100%;
            position: relative;
            z-index : 2;
        }

        .add-us {
            cursor     : pointer;
            position   : absolute;
            width      : 214px;
            height     : 68px;
            line-height: 68px;
            background : transparent;
            border     : 1px solid #fff;
            font-size  : 32px;
            color      : #fff;
            top        : 60%;
            left       : 50%;
            text-align : center;
            transform  : translateX(-50%);
            z-index    : 3;
        }
    }

    // 公共title
    .index-t {
        color        : #0C273C;
        width        : 308px;
        padding-top  : 40px;
        margin-bottom: 36px;

        div:nth-child(1) {
            font-size: 32px;
        }

        div:nth-child(2) {
            font-size : 26px;
            position  : relative;
            display   : inline-block;
            margin-top: 10px;

            &::after {
                position: absolute;
                top     : -5px;
                right   : 0;
                content : "";
                width   : 100%;
                height  : 0;
                border  : 2px solid #0C273C;
            }
        }
    }

    //content 
    .course-content {
        padding: 4.125rem 0px;

        .course-title {
            font-size    : 2.25rem;
            color        : #0C273C;
            font-weight  : bold;
            margin-bottom: 3.125rem;
        }

        .bold {
            font-size    : 2rem;
            font-weight  : bold;
            margin-bottom: 1.625rem;
            color        : #0C273C;
        }

        .course-subtitle {
            font-size    : 1.875rem;
            color        : #0C273C;
            margin-bottom: 1.25rem;
        }

        .student {
            margin-bottom: 3.3125rem;
        }

        p {
            font-size: 1.75rem;
            color    : #0C273C;
        }
    }
}

@media screen and (min-width: 320px) and (max-width: 768px) {
    .add-us {
        width      : 80px !important;
        height     : 30px !important;
        line-height: 30px !important;
        font-size  : 16px !important;
    }
}