.page-news {
    background-image : url('../img/bg.png');
    background-repeat: no-repeat;
    background-size  : 100% 100%;
    padding-bottom   : 120px;

    .index-t {
        color        : #0C273C;
        width        : 278px;
        padding-top  : 92px;
        margin-bottom: 36px;

        div:nth-child(1) {
            font-size: 32px;
        }

        div:nth-child(2) {
            font-size : 26px;
            position  : relative;
            display   : inline-block;
            margin-top: 10px;

            &::after {
                position: absolute;
                top     : -5px;
                right   : 0;
                content : "";
                width   : 100%;
                height  : 0;
                border  : 2px solid #0C273C;
            }
        }
    }

    .news-content {
        background-image : url('../img/news/n1.png');
        background-repeat: no-repeat;
        background-size  : 100% 100%;
        padding          : 0px 20px;

        .content-top {
            height   : 128px;
            color    : #fff;
            font-size: 24px;

            img {
                margin-right: 20px;
            }
        }

        .content-mid {
            .mid-left {
                .left-top {
                    margin-bottom: 76px;

                    img {
                        width: 100%;
                    }
                }

                .left-list {
                    .list-item {
                        cursor       : pointer;
                        color        : #fff;
                        font-size    : 16px;
                        margin-bottom: 30px;

                        .item-left {
                            width : 100%;
                            height: 134px;


                            img {
                                height: 100%;
                                width : 100%;
                            }
                        }

                        .item-right {
                            .top-one {
                                width: 70%;

                                span {
                                    font-size: 20px;
                                }

                                .span {
                                    width        : 0;
                                    height       : 0;
                                    border-top   : 6px solid transparent;
                                    border-left  : 8px solid #5AABFE;
                                    border-bottom: 5px solid transparent;
                                    position     : relative;
                                    left         : -10px;
                                }

                                .title {
                                    width           : 100%;
                                    overflow        : hidden;
                                    text-overflow   : ellipsis;
                                    -o-text-overflow: ellipsis;
                                    white-space     : nowrap;
                                }
                            }

                            .time {
                                width    : 100px;
                                font-size: 20px;
                            }

                            .right-content {
                                margin-top        : 10px;
                                font-size         : 16px;
                                display           : -webkit-box;
                                -webkit-box-orient: vertical;
                                overflow          : hidden;
                                text-overflow     : ellipsis;
                                -webkit-line-clamp: 4;
                                -webkit-box-orient: vertical;
                            }
                        }
                    }
                }
            }

            .mid-right {
                background: #C6C8CA;

                .top {
                    font-size     : 24px;
                    letter-spacing: 10px;
                    margin-top    : 10px;
                }

                .content {
                    margin: 20px 0px;
                    cursor: pointer;
                    .content-left {
                        padding     : 0;
                        width       : 100%;
                        margin-right: 10px;

                        img {
                            width: 100%;
                        }
                    }

                    .content-right {
                        font-size: 14px;
                        padding  : 0;

                        .right-one {
                            color        : #FF5A5A;
                            margin-bottom: 20px;
                        }
                    }
                }

                .bottom {
                    padding      : 0px 10px;
                    margin-bottom: 20px;

                    cursor: pointer;

                    span {
                        font-size       : 14px;
                        width           : 100%;
                        overflow        : hidden;
                        text-overflow   : ellipsis;
                        -o-text-overflow: ellipsis;
                        white-space     : nowrap;
                    }

                    .span {
                        width        : 0;
                        height       : 0;
                        border-top   : 6px solid transparent;
                        border-left  : 8px solid #5AABFE;
                        border-bottom: 5px solid transparent;
                        position     : relative;
                        left         : -10px;
                    }
                }
            }
        }
    }
}





@media (min-width: 992px) {
    .right-one {
        margin-bottom: 0px !important;
    }
}

@media screen and (min-width: 769px) and (max-width: 992px) {
    .right-one {
        margin-bottom   : 0px !important;
        font-size       : 12px !important;
        width           : 100%;
        overflow        : hidden;
        text-overflow   : ellipsis;
        -o-text-overflow: ellipsis;
        white-space     : nowrap;
    }

    .right-two {
        font-size         : 12px !important;
        display           : -webkit-box;
        -webkit-box-orient: vertical;
        overflow          : hidden;
        text-overflow     : ellipsis;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .item-right {

        .title,
        .time {
            font-size: 16px !important;
        }

        .right-content {
            font-size: 14px !important;
        }
    }
}

@media screen and (min-width: 320px) and (max-width: 768px) {
    .right-one {
        margin-bottom: 0px !important;
        font-size    : 12px !important;
    }


    .item-right {

        .title,
        .time {
            font-size: 14px !important;
        }

        .right-content {
            font-size: 12px !important;
        }
    }
}