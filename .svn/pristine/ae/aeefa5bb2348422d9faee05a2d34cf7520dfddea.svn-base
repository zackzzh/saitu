.page-course {
  background: #f5f5f4;
  padding-bottom: 120px;
}
.page-course .banner {
  width: 100%;
  position: relative;
  z-index: 10;
}
.page-course .banner img {
  width: 100%;
  position: relative;
  z-index: 10;
}
.page-course .banner .add-us {
  cursor: pointer;
  position: absolute;
  width: 214px;
  height: 68px;
  line-height: 68px;
  background: transparent;
  border: 1px solid #fff;
  font-size: 32px;
  color: #fff;
  top: 60%;
  left: 50%;
  text-align: center;
  transform: translateX(-50%);
  z-index: 100;
}
.page-course .index-t {
  color: #0C273C;
  width: 308px;
  padding-top: 40px;
  margin-bottom: 36px;
}
.page-course .index-t div:nth-child(1) {
  font-size: 32px;
}
.page-course .index-t div:nth-child(2) {
  font-size: 26px;
  position: relative;
  display: inline-block;
  margin-top: 10px;
}
.page-course .index-t div:nth-child(2)::after {
  position: absolute;
  top: -5px;
  right: 0;
  content: "";
  width: 100%;
  height: 0;
  border: 2px solid #0C273C;
}
.page-course .course-thead {
  height: 60px;
  line-height: 60px;
  color: #FF5B5B;
  font-size: 16px;
  background: #042239;
  margin-bottom: 16px;
  width: 100%;
}
.page-course .course-thead .thead-one {
  width: 15%;
  text-align: center;
}
.page-course .course-thead .thead-two {
  width: 25%;
  text-align: center;
}
.page-course .course-thead .thead-three {
  width: 12%;
  text-align: center;
}
.page-course .course-body {
  background: #042239;
  color: #FF5B5B;
  font-size: 16px;
}
.page-course .course-body .thead-one {
  width: 15%;
}
.page-course .course-body .thead-one img {
  width: 100%;
}
.page-course .course-body .thead-three {
  width: 12%;
}
.page-course .course-body .thead-two {
  width: 25%;
}
.page-course .course-body span {
  display: inline-block;
  color: #FF5B5B;
  cursor: pointer;
}
.page-course .course-body tr {
  border-bottom: 1px solid #FF5B5B;
}
.page-course .course-body td {
  padding: 48px 10px !important;
  border-right: 1px solid #FF5B5B;
  text-align: center;
}
.page-course .course-body td:nth-last-child(1) {
  border-right: none;
}
.page-course .course-body tr:nth-last-child(1) {
  border-bottom: none;
}
.page-course .table th,
.page-course .table td {
  padding: 0;
  vertical-align: middle;
}
@media screen and (min-width: 320px) and (max-width: 768px) {
  .add-us {
    width: 80px !important;
    height: 30px !important;
    line-height: 30px !important;
    font-size: 16px !important;
  }
  .course-body,
  .course-thead {
    font-size: 12px !important;
  }
  .thead-one {
    width: 28% !important;
  }
}
@media screen and (min-width: 769px) and (max-width: 992px) {
  .course-body,
  .course-thead {
    font-size: 12px !important;
  }
}
