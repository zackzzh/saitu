body {
    width     : 100%;
    background: linear-gradient(-4deg, rgba(147, 149, 149, 1), rgba(233, 235, 235, 1), rgba(255, 255, 255, 1));

    .study-abroad-main-div {
        width : 1000px;
        margin: auto;

        .abroad-list {
            margin-top: 80px;
            color     : #EB6D6E;

            a {
                color: #333;
            }

            .active {
                color: #EB6D6E;
            }

            a:hover {
                color: #EB6D6E;
            }
        }

        .study-abroad-card-div {
            width     : 100%;
            margin    : 90px 0;
            background: #0C273C;

            .study-abroad-img-div {
                display   : inline-block;
                width     : 54%;
                position  : relative;
                text-align: center;

                .study-abroad-img-type {
                    width: 100%;
                }

                .study-abroad-img-title {
                    // background-color: red;
                    color              : white;
                    position           : absolute;
                    top                : 0;
                    bottom             : 0;
                    left               : 0; //水平居中
                    right              : 0; //水平居中
                    width              : 100%; //水平居中
                    height             : 20%;
                    margin             : auto;
                    font-size          : 54px;
                    font-weight        : bold;
                }
            }

            .study-abroad-card-div-text {
                float     : right;
                width     : 46%;
                // display: inline-block;
                margin    : 40px 40px 0 -40px;
                padding   : 0 0 0 50px;

                .study-abroad-card-title {
                    color        : #EB6D6E;
                    font-size    : 44px;
                    font-weight  : bold;
                    margin-bottom: 10px;
                }

                .study-abroad-card-content {
                    color     : #EB6D6E;
                    font-size : 20px;
                    word-break: break-all;
                }

                img {
                    clear : both;
                    float : right;
                    height: 102px;
                    margin: 0 0 0 40px;
                }
            }

            .study-abroad-card-div-text-left {
                float  : left;
                margin : 40px 0 0 0;
                padding: 0 10px 0 40px;

                img {
                    float : left;
                    margin: 0 40px 0 0;
                }
            }
        }

    }
}

@media screen and (min-width: 850px) and (max-width: 1010px) {
    body {
        .study-abroad-main-div {
            width: 100%;

            .study-abroad-card-div {
                .study-abroad-img-div {
                    .study-abroad-img-title {
                        font-size: 48px;
                    }
                }

                .study-abroad-card-div-text {
                    // display: inline-block;
                    margin    : 30px 30px 0 -30px;

                    .study-abroad-card-title {
                        font-size: 38px;
                    }

                    .study-abroad-card-content {
                        font-size: 18px;
                    }

                    img {
                        height: 90px;
