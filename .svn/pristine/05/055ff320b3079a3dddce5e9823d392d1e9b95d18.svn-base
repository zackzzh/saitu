#common-modal {
  display: none;
}
.page-material {
  background: #f5f5f4;
  padding-bottom: 120px;
}
.page-material .banner {
  width: 100%;
  position: relative;
  z-index: 1;
}
.page-material .banner img {
  width: 100%;
  position: relative;
  z-index: 2;
}
.page-material .banner .add-us {
  cursor: pointer;
  position: absolute;
  width: 214px;
  height: 68px;
  line-height: 68px;
  background: transparent;
  border: 1px solid #fff;
  font-size: 32px;
  color: #fff;
  top: 60%;
  left: 50%;
  text-align: center;
  transform: translateX(-50%);
  z-index: 3;
}
.page-material .search {
  width: 100%;
  height: 110px;
  font-size: 26px;
  background: #fff;
  position: relative;
  top: -55px;
  z-index: 3;
}
.page-material .search .search-one {
  cursor: pointer;
  width: 20%;
  height: 110px;
  color: #0C273C;
  border-right: 1px solid #e5e5e5;
}
.page-material .search .search-one img {
  margin: 0px 10%;
  width: 30px;
  height: 30px;
}
.page-material .search .search-two {
  height: 110px;
  width: 80%;
}
.page-material .search .search-two input {
  width: 100%;
  height: 110px;
  line-height: 110px;
  border: none;
}
.page-material .search .search-two img {
  cursor: pointer;
  right: 23%;
  position: absolute;
  flex-shrink: 0;
  width: 30px;
  height: 30px;
}
.page-material .search .search-three {
  cursor: pointer;
  color: #fff;
  background: #0C273C;
  width: 20%;
  height: 110px;
  line-height: 110px;
  text-align: center;
}
.page-material .index-t {
  color: #0C273C;
  width: 278px;
  padding-top: 40px;
  margin-bottom: 36px;
}
.page-material .index-t div:nth-child(1) {
  font-size: 32px;
}
.page-material .index-t div:nth-child(2) {
  font-size: 26px;
  position: relative;
  display: inline-block;
  margin-top: 10px;
}
.page-material .index-t div:nth-child(2)::after {
  position: absolute;
  top: -5px;
  right: 0;
  content: "";
  width: 100%;
  height: 0;
  border: 2px solid #0C273C;
}
.page-material .main .main-left {
  background: #0C273C;
  padding: 0;
}
.page-material .main .main-left .left-item {
  text-indent: 20px;
  height: 44px;
  line-height: 44px;
  font-size: 28px;
  color: #FF5B5B;
}
.page-material .main .main-left .active {
  color: #0C273C;
  background: #FF5B5B;
}
.page-material .main .main-right {
  position: relative;
  left: -6%;
  top: 44px;
}
.page-material .main .main-right .right-item:hover .button {
  height: 100%;
  opacity: 0.8;
}
.page-material .main .main-right .right-item:hover .button button {
  opacity: 1;
}
.page-material .main .main-right .right-item {
  margin-bottom: 20px;
  cursor: pointer;
  width: 100%;
}
.page-material .main .main-right .right-item img {
  width: 100%;
}
.page-material .main .main-right .right-item .item-bottom {
  background: #fff;
  border-bottom: 5px solid #0C273C;
  padding: 0px 20px;
  color: #1B1F2C;
  font-size: 16px;
}
.page-material .main .main-right .right-item .item-bottom .title {
  width: 100%;
  padding-top: 10px;
  margin-bottom: 10px;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  white-space: nowrap;
}
.page-material .main .main-right .right-item .item-bottom .time {
  margin-bottom: 18px;
}
.page-material .main .main-right .right-item .item-bottom .content {
  color: #8AD2ED;
  margin-bottom: 18px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}
.page-material .main .main-right .right-item .button {
  opacity: 0;
  position: absolute;
  width: 90%;
  height: 0;
  top: 0;
  background: #000;
  left: 10%;
  transition: height 2s, transform 2s;
  -webkit-transition: height 2s, -webkit-transform 2s;
}
.page-material .main .main-right .right-item .button .col-5 {
  padding: 0px;
}
.page-material .main .main-right .right-item .button button {
  opacity: 0;
  transition: opacity 2s, transform 2s;
  -webkit-transition: opacity 2s, -webkit-transform 2s;
  cursor: pointer;
  height: 40px;
  line-height: 30px;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 5px;
  background: transparent;
  font-size: 14px;
}
@media screen and (min-width: 769px) and (max-width: 992px) {
  .main-left .left-item {
    font-size: 20px !important;
  }
  .search {
    font-size: 16px !important;
  }
}
@media screen and (min-width: 320px) and (max-width: 768px) {
  .add-us {
    width: 80px !important;
    height: 30px !important;
    line-height: 30px !important;
    font-size: 12px !important;
  }
  .search {
    font-size: 12px !important;
    height: 40px !important;
    top: -20px !important;
  }
  .search input {
    height: 40px !important;
  }
  .search .search-three {
    height: 40px !important;
    line-height: 40px !important;
    width: 20% !important;
  }
  .search .search-one {
    width: 28% !important;
    height: 40px !important;
  }
  .search img {
    margin: 0 5px !important;
    width: 15px !important;
    height: 15px !important;
  }
}
