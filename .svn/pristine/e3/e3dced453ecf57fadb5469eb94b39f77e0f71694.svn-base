  .page-service {
      background-image : url('../img/bg.png');
      background-repeat: no-repeat;
      background-size  : 100% 100%;
      padding-bottom   : 120px;

      .index-t {
          color        : #0C273C;
          width        : 278px;
          padding-top  : 92px;
          margin-bottom: 36px;

          div:nth-child(1) {
              font-size: 32px;
          }

          div:nth-child(2) {
              font-size : 26px;
              position  : relative;
              display   : inline-block;
              margin-top: 10px;

              &::after {
                  position: absolute;
                  top     : -5px;
                  right   : 0;
                  content : "";
                  width   : 100%;
                  height  : 0;
                  border  : 2px solid #0C273C;
              }
          }
      }

      .service-list {
          .service-one {
              .service-left {
                  padding: 0 !important;
                  width  : 50%;

                  .left-top {
                      width      : 100%;
                      height     : 120px;
                      font-size  : 84px;
                      line-height: 120px;

                      .top-one {
                          height     : 100%;
                          width      : 120px;
                          background : #FF5A5A;
                          color      : #000;
                          font-weight: bold;
                          text-align : center;
                          line-height: 120px;
                          font-style : italic
                      }

                      .top-two {
                          width     : 100%;
                          height    : 100%;
                          background: #283F58;
                          color     : #FF5A5A;
                          text-align: center;
                      }
                  }

                  .left-bottom {
                      color     : #FF5A5A;
                      padding   : 40px 20px;
                      box-sizing: border-box;
                      background: #042239;
                      font-size : 38px;
                  }
              }

              .service-img {
                  width  : 60%;
                  padding: 0 !important;

                  img {
                      width: 60%;
                  }
              }

              .img3 {
                  width: 63%;

                  img {
                      width: 66%;
                  }
              }

              .img4 {
                  height: 60%;
              }
          }
      }
  }

  @media (min-width: 992px) {
      .service-left {
          .left-top {
              font-size: 70px !important;
          }

          .left-bottom {
              font-size: 30px !important;
          }
      }
  }

  @media (min-width: 768px) {
      .service-left {
          .left-top {
              font-size: 46px !important;
          }

          .left-bottom {
              font-size: 25px !important;
          }
      }
  }

  @media screen and (min-width: 320px) and (max-width: 768px) {
      .service-left {
          .left-top {
              font-size  : 18px !important;
              height     : 80px !important;
              line-height: 80px !important;

              .top-one {
                  width      : 80px !important;
                  line-height: 80px !important;
              }
          }

          .left-bottom {
              font-size: 16px !important;
          }
      }
  }