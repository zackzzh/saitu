  body .study-abroad-main-div {
    width: 100%;
  }
  body .study-abroad-main-div .study-abroad-card-div .study-abroad-img-div .study-abroad-img-title {
    font-size: 48px;
  }
  body .study-abroad-main-div .study-abroad-card-div .study-abroad-card-div-text {
