.common-footer-div {
    text-align: center;
    background: #0C273C;
    color: #FFFFFF;

    .common-footer-logo1 {
        width: 120px;
        margin: 14px 0 16px 0;
    }

    .common-footer-content {
        padding: 0 50px;
        font-size: 14px;
        letter-spacing: 2px;
        line-height: 26px;
    }

    .common-footer-links {
        width: 100%;
        padding: 12px 0 20px 0;
        // background: rgba(194, 197, 196, 0.5);

        .common-footer-links-row {
            margin: auto;
            padding: 18px 0;
            font-size: 16px;
            font-weight: bold;

            .common-footer-link-border {
                border-right: 1px solid #A2ACB6;
            }

            div {
                cursor: pointer;
                color: #A2ACB6;
                // color: rgba(12, 39, 60, 1);
            }

            .footer-active-item {
                color: #FF5B5B;
            }
        }
    }

    .common-footer-qr {
        width: 150px;
        position: absolute;
        top: 0;
        margin: 0 0 0 180px;
    }

    .common-footer-logo-div {
        display: flex;
        align-items: flex-end;
        justify-content: center;

        .common-footer-logo2 {
            width: 80px;
            margin-right: 30px;
        }

        .common-footer-logo3 {
            width: 130px;
        }
    }

    .common-footer-phone {
        width: 330px;
        margin: 38px auto 16px auto;
        display: block;
    }

    .common-footer-address {
        width: 480px;
        margin: 0 auto 30px auto;
        display: block;
    }

    .common-footer-line {
        width: 100%;
        height: 1px;
        background: #FFFFFF;
    }

    .common-footer-copyright {
        padding: 36px 0 10px 0;
        font-size: 14px;
        letter-spacing: 1px;
    }

    .common-footer-licence {
        padding: 0 0 36px 0;
        font-size: 14px;
        letter-spacing: 1px;
    }
}

@media screen and (max-width: 680px) {
    .common-footer-div {
        .common-footer-qr {
            width: 150px;
            position: relative;
            top: 0;
            margin: 0 auto 10px auto;
        }
    }
}

@media screen and (max-width: 480px) {
    .common-footer-div {
        .common-footer-qr {
            width: 150px;
            position: relative;
            top: 0;
            margin: 0 auto 10px auto;
        }

        .common-footer-phone {
            width: 330px;
        }

        .common-footer-address {
            padding: 0 2px;
            width: 100%;
        }
    }
}

@media screen and (max-width: 400px) {
    .common-footer-div {
        .common-footer-qr {
            width: 150px;
            position: relative;
            top: 0;
            margin: 0 auto 10px auto;
        }

        .common-footer-links {
            .common-footer-links-row {
                .col {
                    padding: 0 12px;
                }
            }
        }

        .common-footer-div {
            .common-footer-phone {
                width: 330px;
            }

            .common-footer-address {
                padding: 0 2px;
                width: 100%;
            }
        }
    }
}

@media screen and (max-width: 330px) {
    .common-footer-div {
        .common-footer-qr {
            width: 150px;
            position: relative;
            top: 0;
            margin: 0 auto 10px auto;
        }

        .common-footer-links {
            .common-footer-links-row {
                .col {
                    padding: 0 10px;
                }
            }
        }

        .common-footer-phone {
            padding: 0 2px;
            width: 100%;
        }

        .common-footer-address {
            padding: 0 2px;
            width: 100%;
        }
    }
}