body {
  width: 100%;
  background: #f5f5f4;
}
body .study-abroad-main-div {
  width: 1000px;
  margin: auto;
}
body .study-abroad-main-div .abroad-list {
  margin-top: 80px;
  color: #EB6D6E;
}
body .study-abroad-main-div .abroad-list a {
  color: #333;
}
body .study-abroad-main-div .abroad-list .active {
  color: #EB6D6E;
}
body .study-abroad-main-div .abroad-list a:hover {
  color: #EB6D6E;
}
body .study-abroad-main-div .study-abroad-card-div {
  cursor: pointer;
  width: 1000px;
  margin: 90px 0;
  background: #0C273C;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-img-div {
  display: inline-block;
  width: 54%;
  position: relative;
  text-align: center;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-img-div .study-abroad-img-type {
  width: 100%;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-img-div .study-abroad-img-title {
  color: white;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 20%;
  margin: auto;
  font-size: 54px;
  font-weight: bold;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-card-div-text {
  float: right;
  width: 46%;
  margin: 30px 40px 0 -40px;
  padding: 0 0 0 50px;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-card-div-text .study-abroad-card-title {
  color: #EB6D6E;
  font-size: 44px;
  font-weight: bold;
  margin-bottom: 10px;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-card-div-text .study-abroad-card-content {
  color: #EB6D6E;
  font-size: 20px;
  word-break: break-all;
}
body .study-abroad-main-div .study-abroad-card-div .study-abroad-card-div-text img {
  clear: both;
  float: right;
  height: 102px;
  margin: 0 0 0 40px;
}
body .study-modal-close {
  font-size: 50px;
  color: red;
  margin: 0 6px 0 0;
}
body .study-modal-div {
  background: #697279;
  padding: 38px 30px;
  color: #0c273c;
}
body .study-modal-div .study-modal-title-div {
  text-align: center;
}
body .study-modal-div .study-modal-title-div .study-modal-img {
  margin: -14px 6px 0 0;
  height: 32px;
}
body .study-modal-div .study-modal-title-div .study-modal-title {
  display: inline-block;
  font-size: 32px;
  font-weight: bold;
  color: #ec6d6e;
}
body .study-modal-div .study-modal-content {
  margin-top: 10px;
  letter-spacing: 2px;
}
