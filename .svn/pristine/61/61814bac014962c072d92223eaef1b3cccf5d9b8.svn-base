.common-head-main-div {
    width: 100%;
    text-align: center;

    // position: fixed;
    // top: 0;
    .common-head-logo {
        width: 138px;
        margin: 4px 0 10px 0;
        // margin: auto;
    }

    .navbar {
        padding: 0;

        .nav-item {
            padding: 6px;

            .nav-link {
                color: #FF5B5B !important;
                font-weight: bold;
            }

            .dropdown-menu {
                background: rgb(66, 45, 45);

                .dropdown-item {
                    color: #FF5B5B !important;
                }

                .dropdown-item:hover {
                    background: #FF5B5B !important;
                    color: #0C273C !important;
                }
            }


        }

        .nav-item:hover {
            background: #FF5B5B;

            .nav-link {
                color: #0C273C !important;
                font-weight: bold;
            }

        }


        .active {
            background: #FF5B5B;

            .nav-link {
                color: #0C273C !important;
                font-weight: bold;
            }
        }
    }

}