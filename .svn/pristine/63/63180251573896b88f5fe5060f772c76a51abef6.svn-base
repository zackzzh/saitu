.common-qr-div {
    position: fixed;
    top: 50px;
    right: 30px;
    z-index: 100;
    text-align: center;
    background: #E2E2E2;
    color: #939595;
    border: 1px solid  #939595;
    border-radius: 4px;

    .common-qr-img {
        width: 180px;
        height: auto;
        border-radius: 4px 4px 0 0; 
    }
    .common-qr-title{
        margin: 6px 0 0 0;
    }
    .common-qr-subtitle{
        margin: 0 0 6px 0;
    }
}

@media (max-width: 1000px){
    .common-qr-div {
        display: none;
    }
}