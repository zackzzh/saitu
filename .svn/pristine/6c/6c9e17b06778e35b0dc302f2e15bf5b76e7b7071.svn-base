.join-main-div {
  position: relative;
  background-image: url("../../img/bg.png");
  background-size: 100% 100%;
  text-align: center;
}
.join-main-div .join-headbg {
  width: 100%;
}
.join-main-div .join-joinus-div {
  position: relative;
  margin: -60px 100px 0 100px;
  background-image: url("../../img/join/joinus.png");
  background-size: 100% 100%;
  letter-spacing: 2px;
}
.join-main-div .join-joinus-div .join-joinus-title {
  padding: 14px 0 20px 0;
  color: #333333;
  font-size: 22px;
  font-weight: bold;
}
.join-main-div .join-joinus-div .join-joinus-content {
  padding: 0 30px 30px 30px;
  color: #666666;
  font-size: 14px;
  font-weight: bold;
  line-height: 24px;
}
.join-main-div .join-teacher-div {
  margin: 60px 0;
}
.join-main-div .join-teacher-div .join-teacher-title {
  margin-bottom: 22px;
  color: #252525;
  font-size: 18px;
  font-weight: 600;
  letter-spacing: 2px;
}
.join-main-div .join-teacher-div .join-teacher-card-div {
  text-align: left;
}
.join-main-div .join-teacher-div .join-teacher-card-div .join-teacher-card {
  margin: 10px;
  background-image: url("../../img/join/cardbg.png");
  background-size: 100% 100%;
  display: flex;
  justify-content: space-between;
}
.join-main-div .join-teacher-div .join-teacher-card-div .join-teacher-card .join-teacher-card-img {
  width: 80px;
  height: 80px;
  margin: 10px 0 0 -30px;
}
.join-main-div .join-teacher-div .join-teacher-card-div .join-teacher-card .join-teacher-card-text {
  margin: 22px 14px 18px 14px;
  letter-spacing: 1px;
  font-size: 16px;
}
.join-main-div .join-teacher-div .join-teacher-card-div .join-teacher-card .join-teacher-card-text .join-teacher-card-title {
  margin: 0 0 10px 0;
  color: #222222;
  font-weight: bold;
}
.join-main-div .join-teacher-div .join-teacher-card-div .join-teacher-card .join-teacher-card-text .join-teacher-card-content {
  color: #666666;
}
.join-main-div .join-card-div {
  padding: 10px 0 46px 0;
}
.join-main-div .join-card-div img {
  width: 100%;
  margin-bottom: 20px;
}
.join-main-div .join-card-div .join-card-idea-div {
  margin-bottom: 20px;
  height: calc(26vh);
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.join-main-div .join-card-div .join-card-idea-div .join-card-idea {
  font-size: 16px;
  letter-spacing: 2px;
  text-align: center;
}
.join-main-div .join-card-div .join-card-idea-div .join-card-idea .join-card-idea-title {
  margin-bottom: 20px;
  color: #333333;
  font-weight: bold;
}
.join-main-div .join-card-div .join-card-idea-div .join-card-idea .join-card-idea-content {
  margin: 0 20px;
  color: #666666;
  line-height: 36px;
}
@media screen and (min-width: 990px) and (max-width: 1200px) {
  .join-main-div .join-card-div .join-card-idea-div {
    height: calc(21.6vh);
  }
}
